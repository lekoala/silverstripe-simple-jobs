{
    "name": "lekoala/silverstripe-simple-jobs",
    "description": "Simple Jobs for SilverStripe CMS",
    "type": "silverstripe-module",
    "keywords": [
        "silverstripe",
        "jobs",
        "cron",
        "module",
        "cms"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "LeKoala",
            "email": "thomas@lekoala.be"
        }
    ],
    "require": {
        "php": "^7.4 || ^8",
        "silverstripe/recipe-plugin": "^1 || ^2",
        "silverstripe/vendor-plugin": "^1 || ^2",
        "silverstripe/framework": "^4.4 || ^5",
        "silverstripe/crontask": "^2.1 || ^3"
    },
    "require-dev": {
        "silverstripe/recipe-cms": "^4.4 || ^5",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "LeKoala\\SimpleJobs\\": "src/",
            "LeKoala\\SimpleJobs\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "extra": {
        "installer-name": "simple-jobs"
    },
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-simple-jobs/issues"
    }
}
